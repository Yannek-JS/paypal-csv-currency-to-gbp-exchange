{
    "paypal_csv": { 
        "dir": "/some_dir",
        "explore_recursively": true,
        "filename_pattern": "paypal_export_*.csv"
    },
    "hmrc_csv": {
        "dir": "/some_dir/hmrc",
        "explore_recursively": true,
        "filename_pattern": "monthly_csv_>>YYYY-MM<<.csv",
        "api_url": "https://www.trade-tariff.service.gov.uk/api/v2/exchange_rates/files",
        "download_dir": {
            "name": "/some_dir/hmrc/download",
            "create": true
        }
    },
    "output_csv": {
        "dir": {
            "name": "/some_dir",
            "create": true
        },
        "filename_prefix": "output_",
        "filename_suffix": "_>>datetime<<.csv",
        "replace_columns": true
    }
}